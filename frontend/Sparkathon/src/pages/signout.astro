---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div
        class="maxwidth-[100vw] h-[100vh] flex justify-center items-center bg-gray-100"
    >
        <div
            class="border-1 w-[30vw] h-[70vh] bg-white border-gray-300 rounded-2xl"
        >
            <div class="text-center text-2xl font-bold mb-4">
                You have been signed out
            </div>
            <div class="text-center mb-6">Thank you for using our service!</div>
            <div class="flex justify-center">
                <a
                    href="/signin"
                    class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"
                >
                    Sign In Again
                </a>
            </div>
        </div>
    </div>
    <script>
        // Clear local storage or any session data if needed
        localStorage.removeItem("token");
        // Optionally redirect to the home page or sign-in page
        window.location.href = "/";
    </script>
</Layout>
